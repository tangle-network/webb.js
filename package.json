{
  "version": "0.1.4-50",
  "private": true,
  "type": "module",
  "engines": {
    "yarn": "^1.10.1"
  },
  "workspaces": [
    "examples/*",
    "packages/*",
    "tests/*"
  ],
  "resolutions": {
    "@polkadot/api": "8.1.1",
    "@polkadot/types": "8.1.1"
  },
  "scripts": {
    "pumbp": "./scripts/update-version.js prerelease",
    "build": "yarn build-ts:dev",
    "build-ts:dev": "node ./scripts/webb-build-dev.cjs",
    "build:release": "node ./scripts/webb-build-release.cjs",
    "build:interfaces": "yarn build:interfaces:defs && yarn build:interfaces:chain",
    "build:interfaces:defs": "ts-node -O \"{\\\"module\\\":\\\"commonjs\\\"}\" -r tsconfig-paths/register node_modules/.bin/polkadot-types-from-defs --input packages/types/src/interfaces --package sample-polkadotjs-typegen/interfaces --endpoint packages/types/src/metadata/metadata.json",
    "build:interfaces:chain": "ts-node -O \"{\\\"module\\\":\\\"commonjs\\\"}\" -r tsconfig-paths/register node_modules/.bin/polkadot-types-from-chain --endpoint ws://localhost:9944 --output ./packages/types/src/interfaces",
    "lint": "polkadot-dev-run-lint --skip-tsc",
    "clean": "polkadot-dev-clean-build",
    "postinstall": "polkadot-dev-yarn-only",
    "wasm:test": "wasm-pack test --release --node ./packages/wasm-utils ",
    "test": "yarn test:unit && yarn test:integration && yarn wasm:test",
    "test:unit": "mocha 'packages/**/*.spec.ts' --exit",
    "test:wasm": "mocha 'packages/**/*.spec.ts' --exit",
    "test:providers": "mocha 'packages/api-providers/**/*.spec.ts' --exit",
    "test:integration": "mocha 'tests/integration_tests/**/*.ts' --exit",
    "test:perf": "cross-env NODE_OPTIONS=--experimental-wasm-modules jest --config ./jest.perf.config.js",
    "check-deps": "./node_modules/@open-web3/util/scripts/check-deps.js yarn.lock @polkadot/ @open-web3/",
    "update-metadata": "NODE_OPTIONS='--loader ./loader.js' node --experimental-specifier-resolution=node packages/types/scripts/updateMetadata.ts",
    "example:mixer": "ts-node -r tsconfig-paths/register examples/mixer.ts",
    "script": "NODE_OPTIONS=\"loader=./loader.js\" node",
    "format": "prettier --write \"packages/**/*.{ts,js,jsx,tsx}\" && cargo fmt --manifest-path packages/wasm-utils/Cargo.toml",
    "doc": "npx typedoc --name \"Webb Tools API\" --includeVersion --options ./typedoc.json",
    "generate:meta": "ts-node --skip-project node_modules/.bin/polkadot-types-from-chain --package sample-polkadotjs-typegen/interfaces --endpoint ./packages/types/src/metadata/metadata.json --output ./interfaces --strict"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/plugin-syntax-import-assertions": "^7.16.7",
    "@babel/register": "^7.17.0",
    "@babel/runtime": "^7.17.2",
    "@ethersproject/experimental": "^5.5.0",
    "@open-web3/util": "^1.0.1",
    "@openzeppelin/contracts": "^4.2.0",
    "@polkadot/api": "8.1.1",
    "@polkadot/dev": "0.66.4",
    "@polkadot/types": "8.1.1",
    "@truffle/hdwallet-provider": "^1.4.1",
    "@types/jest": "^26.0.24",
    "@types/mocha": "^9.1.0",
    "@types/source-map-support": "^0.5.3",
    "@webb-tools/protocol-solidity": "0.1.12",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "ethers": "5.5.1",
    "fs-extra": "^9.0.1",
    "ganache": "^7.0.3",
    "glob": "^7.1.6",
    "glob2base": "^0.0.12",
    "jest": "^26.6.3",
    "jest-performance": "^2.1.0",
    "keccak": "^3.0.1",
    "minimatch": "^3.0.4",
    "mocha": "9.2.2",
    "node-cron": "^3.0.0",
    "node-fetch": "^2.6.1",
    "opsgenie-sdk": "^0.5.0",
    "prettier": "^2.2.1",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.5.2",
    "ts-node": "10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typedoc": "^0.22.13",
    "typescript": "^4.6.2",
    "worker-loader": "^3.0.7",
    "workerloader-jest-transformer": "^0.0.2",
    "ws": "^7.5.1"
  },
  "dependencies": {
    "ts-proto": "^1.82.2"
  }
}
