{
  "extends": "@open-web3/dev-config/config/tsconfig.json",
  "exclude": [
    "build/**/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "@webb-tools/api": [
        "packages/api/src"
      ],
      "@webb-tools/api/*": [
        "packages/api/src/*"
      ],
      "@webb-tools/types": [
        "packages/types/src"
      ],
      "@webb-tools/types/*": [
        "packages/types/src/*"
      ],
      "@webb-tools/type-definitions": [
        "packages/type-definitions/src"
      ],
      "@webb-tools/type-definitions/*": [
        "packages/type-definitions/src/*"
      ],
      "@webb-tools/sdk-core": [
        "packages/sdk-core/src"
      ],
      "@webb-tools/sdk-core/*": [
        "packages/sdk-core/src/*"
      ],
      "@webb-tools/sdk-bridge": [
        "packages/sdk-bridge/src"
      ],
      "@webb-tools/sdk-bridge/*": [
        "packages/sdk-bridge/src/*"
      ],
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  }
}