{
  "extends": "@open-web3/dev-config/config/tsconfig.json",
  "exclude": [
    "build/**/*",
    "**/build/**/*",
  ],
  "include": [
    "packages/**/*",
    "examples/*"
    // "tests/**/*"
  ],
  "compilerOptions": {
    "types": ["jest", "node"],
    "declaration": true,
    "target": "ES2020",
    "module": "CommonJS",
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@webb-tools/api": [
        "packages/api/src"
      ],
      "@webb-tools/api/*": [
        "packages/api/src/*"
      ],
      "@webb-tools/types": [
        "packages/types/src"
      ],
      "@webb-tools/types/*": [
        "packages/types/src/*"
      ],
      "@webb-tools/type-definitions": [
        "packages/type-definitions/src"
      ],
      "@webb-tools/type-definitions/*": [
        "packages/type-definitions/src/*"
      ],
      "@webb-tools/sdk-core": [
        "packages/sdk-core/src"
      ],
      "@webb-tools/sdk-core/*": [
        "packages/sdk-core/src/*"
      ],
      "@webb-tools/app-util": [
        "packages/app-util/src"
      ],
      "@webb-tools/app-util/*": [
        "packages/app-util/src/*"
      ],
      "@webb-tools/wasm-utils": [
        "packages/wasm-utils/build"
      ],
      "@webb-tools/wasm-utils/*": [
        "packages/wasm-utils/build/*"
      ]
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  }
}
