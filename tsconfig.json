{
  "exclude": [
    "build/**/*",
    "**/build/**/*",
    "scripts",
    "node_modules/**/*",
    "**/node_modules/**/*",
  ],
  "include": [
    "packages/**/*",
    "examples/**/*",
    "tests/**/*",
    "typedefs.d.ts"
  ],
  "compilerOptions": {
    "types": ["mocha", "node"],
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@polkadot/types/lookup": [
        "packages/types/src/interfaces/types-lookup.ts"
      ],
      "@polkadot/api/augment": ["packages/types/src/interfaces/augment-api.ts"],
      "@polkadot/types/augment": ["packages/types/src/interfaces/augment-types.ts"],
      "@webb-tools/api": [
        "packages/api/src"
      ],
      "@webb-tools/api/*": [
        "packages/api/src/*"
      ],
      "@webb-tools/types": [
        "packages/types/src"
      ],
      "@webb-tools/types/*": [
        "packages/types/src/*"
      ],
      "@webb-tools/sdk-core": [
        "packages/sdk-core/src"
      ],
      "@webb-tools/sdk-core/*": [
        "packages/sdk-core/src/*"
      ],
      "@webb-tools/app-util": [
        "packages/app-util/src"
      ],
      "@webb-tools/app-util/*": [
        "packages/app-util/src/*"
      ],
      "@webb-tools/wasm-utils": [
        "packages/wasm-utils/build"
      ],
      "@webb-tools/wasm-utils/*": [
        "packages/wasm-utils/build/*"
      ],
      "@webb-tools/api-derive": [
        "packages/api-derive/src"
      ],
      "@webb-tools/api-derive/*": [
        "packages/api-derive/src/*"
      ],
      "@webb-tools/test-utils": [
        "packages/test-utils/src"
      ],
      "@webb-tools/test-utils/*": [
        "packages/test-utils/src/*"
      ],
    },
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  }
}
